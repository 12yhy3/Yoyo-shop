<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="yhy.project.mapper.TypeMapper">

    <!--  查询商品分类列表（只查启用的商品分类）  -->
    <select id="selectTypeList" resultType="Type">
        select * from type where status = 1
    </select>
    <!--  查询商品分类列表（只查启用的商品分类）  -->
    <select id="getAllTypes" resultType="Type">
        select * from type
    </select>

    <!-- 根据Id获取类型 -->
    <select id="selectTypeById" resultType="Type">
        select * from type where id = #{id}
    </select>
    <insert id="saveType">
        insert into type(name) value(#{name})
    </insert>
    <update id="updateType">
        update type
        <set>
            <if test="name != null">
                name=#{name},
            </if>
            <if test="status != null">
                status=#{status},
            </if>
        </set>
        where id = #{id}
    </update>
    <delete id="delType">
        delete from type where id=#{id}
    </delete>
</mapper>