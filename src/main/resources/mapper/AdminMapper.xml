<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="yhy.project.mapper.AdminMapper">

    <!-- 根据用户名查询用户 -->
    <select id="selectAdminByUsername" resultType="Admin">
        select * from admin where username = #{username}
    </select>
    <!-- 根据id查询用户 -->
    <select id="selectAdminById" resultType="Admin">
        select * from admin where id = #{id}
    </select>
    <!-- 根据用户名查询用户 -->
    <update id="updateAdmin">
        update `admin` set password = #{password} where id = #{id}
    </update>

    <select id="getAdminByUsername" resultType="yhy.project.entity.Admin">
        select * from admin where username=#{username}
    </select>
</mapper>